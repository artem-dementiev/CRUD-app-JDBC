<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
    <servlet-name>EmployerServlet</servlet-name>
    <servlet-class>EmployerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployerServlet</servlet-name>
        <url-pattern>/empList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>EditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/editEmp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>formJSP</servlet-name>
       <jsp-file>/form.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>formJSP</servlet-name>
        <url-pattern>/form.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>editFormJSP</servlet-name>
        <jsp-file>/editForm.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>editFormJSP</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InfoEmpServlet</servlet-name>
        <servlet-class>InfoEmpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InfoEmpServlet</servlet-name>
        <url-pattern>/infoEmp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteEmpServlet</servlet-name>
        <servlet-class>DeleteEmpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteEmpServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>


</web-app>